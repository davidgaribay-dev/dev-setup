{
  "model": "sonnet",
  "includeCoAuthoredBy": false,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "REWIND_API_URL": "{{ rewind_api_url }}"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "excludedCommands": [
      "docker",
      "docker-compose"
    ],
    "enableWeakerNestedSandbox": false
  },
  "permissions": {
    "disableBypassPermissionsMode": "disable",
    "allow": [
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "mcp__playwright__browser_navigate",
      "mcp__neo4j__read_neo4j_cypher",
      "mcp__neo4j__write_neo4j_cypher",
      "mcp__neo4j__get_neo4j_schema"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.config/gh/**)",
      "Read(~/.netrc)",
      "Read(~/.gitconfig)",
      "Bash(curl)",
      "Bash(wget)",
      "Bash(nc)",
      "Bash(telnet)",
      "Bash(sudo)",
      "Bash(su)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(chmod 777)",
      "Bash(eval)",
      "Bash(exec)"
    ],
    "defaultMode": "acceptEdits"
  },
  "extraKnownMarketplaces": {
    "dg-marketplace": {
      "source": {
        "source": "github",
        "repo": "davidgaribay-dev/dg-marketplace"
      }
    }
  },
  "enabledPlugins": {
    "worktree@dg-marketplace": true,
    "git-workflow@dg-marketplace": true,
    "rewind@dg-marketplace": true,
    "single-command-enforcer@dg-marketplace": true,
    "gopls-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "cleanupPeriodDays": 14,
  "respectGitignore": true,
  "autoUpdatesChannel": "stable"
}
